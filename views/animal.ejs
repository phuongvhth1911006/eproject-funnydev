<script type="text/javascript">
    var count =1;
    var p =  document.getElementById("collect");
    var sl=document.getElementsByClassName("image_b");
    var pixel=0;
    function slideback() {
        var back = setInterval(() => {
            if (pixel >0){
                pixel -=20;
                p.style.left = -pixel+"px";
            } else {
                count = 1;
                clearInterval(back);
            }
        },0.01);
    }
    function slidetop(){
        var top = setInterval(() => {
            if (pixel < 500*(sl.length-1)){
                pixel +=20;
                p.style.left = -pixel+"px";
            } else {
                count = sl.length;
                clearInterval(top);
            }
        },0.01);
    }
    function next() {
        var slide = setInterval(show,1);
        function show() {
            if (count == sl.length){
                slideback();
                clearInterval(slide);
            } else {
                if (pixel <(500*count)){
                    pixel+=5;
                    p.style.left = -pixel+"px";
                } else {
                    count ++;
                    clearInterval(slide);
                    console.log(count);
                    console.log(pixel);
                }
            }
        }
    }
    function prev(){
        var slide = setInterval(show,1);
        function show() {
            if (count == 1){
                slidetop();
                clearInterval(slide);
            } else {
                if (pixel >(500*(count-2))){
                    pixel-=5;
                    p.style.left = -pixel+"px";
                } else {
                    count --;
                    clearInterval(slide);
                }
            }
        }
    }
</script>
